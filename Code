# Automatic Text Classifier Demo
# Install required library: pip install scikit-learn

from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.naive_bayes import MultinomialNB

# ----- Step 1: Sample Training Data -----
texts = [
    "I love this product", "This is a great movie", "Amazing performance",
    "I hate this", "This product is terrible", "Worst experience ever"
]
labels = ["Positive", "Positive", "Positive", "Negative", "Negative", "Negative"]

# ----- Step 2: Convert text to numbers -----
vectorizer = TfidfVectorizer()
X = vectorizer.fit_transform(texts)

# ----- Step 3: Train a simple model -----
model = MultinomialNB()
model.fit(X, labels)

# ----- Step 4: Test with new input -----
while True:
    user_text = input("\nEnter a sentence (or 'exit' to quit): ")
    if user_text.lower() == "exit":
        break

    X_test = vectorizer.transform([user_text])
    prediction = model.predict(X_test)
    print("Predicted Sentiment:", prediction[0])